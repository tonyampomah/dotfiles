######################################################################################
### Variables
######################################################################################

# Logo key. Use Mod1 for Alt.
set $mod Mod4

# Home row direction keys, like vim
set $left h
set $down j
set $up k
set $right l

# Preferred terminal emulator
set $term kitty

# Preferred application launcher
set $menu ~/.config/rofi/bin/launcher

gaps inner 10
gaps outer 10

