time-alt ="%l:%M%p"
format-prefix = ""
format-background = ${colors.base}
format-foreground = ${colors.foreground}
label = "%date% %time% "
format-underline = ${colors.alert}


; ;; _-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_

